<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peacetrack"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.peacetrack.views.welcome.WelcomeActivity"
            android:label="@string/welcomeactivity_label" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.peacetrack.views.welcome.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />
        <activity
            android:name="com.peacetrack.views.cohorts.ListCohortsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/allcohortsactivity_label" />
        <activity
            android:name="com.peacetrack.views.activities.AllActivitiesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/allactivitiesactivity_label" />
        <activity
            android:name="com.peacetrack.views.measurements.AllMeasurementsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/allmeasurementsactivity_label" />
        <activity
            android:name="com.peacetrack.views.cohorts.AddCohortActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/addcohortactivity_label" />
        <activity
            android:name="com.peacetrack.views.activities.AddActivityActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/addactivityactivity_label" />
        <activity
            android:name="com.peacetrack.views.measurements.AddMeasurementActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/addmeasurementactivity_label" />
        <activity
            android:name="com.peacetrack.views.cohorts.CohortDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/cohortdetailsactivity_label" />
        <activity
            android:name="com.peacetrack.views.measurements.MeasurementDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/measurementdetailsactivity_label" />
        <activity
            android:name="com.peacetrack.views.activities.AddIndicatorsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/addindicatorsactivity_label" />
    </application>

</manifest>